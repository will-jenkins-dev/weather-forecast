{
    "name": "weather-service",
    "version": "1.0.0",
    "description": "Backend service to provide weather forecast data",
    "main": "index.ts",
    "scripts": {
        "start": "rm -rf dist && tsc && nodemon -r dotenv/config ./dist/manager/index.js",
        "watch": "tsc-watch --noClear -p ./tsconfig.json --onSuccess \"nodemon -r dotenv/config ./dist/manager/index.js\"",
        "test": "rm -rf dist && npm run lint && tsc && jest --silent",
        "test-watch": "rm -rf dist && tsc-watch --noClear -p ./tsconfig.json --onSuccess \"jest --silent\"",
        "types": "rm -rf dist && tsc",
        "lint": "eslint . --ext .ts"
    },
    "keywords": [],
    "author": "Rnwl",
    "license": "ISC",
    "homepage": "https://github.com/Rnwl/service-backend-sharing#readme",
    "dependencies": {
        "axios": "^0.21.4",
        "express": "4.17.1"
    },
    "devDependencies": {
        "@types/express": "4.17.13",
        "@types/jest": "27.0.1",
        "@types/node": "^16.0.0",
        "@typescript-eslint/eslint-plugin": "4.30.0",
        "@typescript-eslint/parser": "4.30.0",
        "dotenv": "10.0.0",
        "eslint": "7.32.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-jest": "24.4.0",
        "eslint-plugin-prettier": "4.0.0",
        "jest": "27.1.0",
        "nodemon": "2.0.12",
        "prettier": "2.3.2",
        "ts-jest": "27.1.3",
        "ts-node": "10.5.0",
        "tsc-watch": "4.5.0",
        "typescript": "4.4.2"
    },
    "engines": {
        "npm": ">=8.0.0",
        "node": ">=16.14.0"
    },
    "jest": {
        "rootDir": "./",
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testRegex": ".*\\.test\\.ts$",
        "roots": [
            "src"
        ]
    }
}
